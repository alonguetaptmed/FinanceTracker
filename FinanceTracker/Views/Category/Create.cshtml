@model CategoryViewModel
@{
    ViewData["Title"] = "Nouvelle catégorie";
}

<h1>Créer une nouvelle catégorie</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-tag"></i> Détails de la catégorie
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Color" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="Color" class="form-control" type="color" />
                            <input type="text" class="form-control" id="colorHex" value="@Model.Color" readonly />
                        </div>
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Retour à la liste
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Créer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-info-circle"></i> Informations
            </div>
            <div class="card-body">
                <h5 class="card-title">Création d'une catégorie</h5>
                <p class="card-text">
                    Les catégories vous permettent de classer vos transactions pour mieux suivre vos dépenses et revenus.
                </p>
                
                <h6>Comment utiliser les catégories :</h6>
                <ul>
                    <li>Chaque transaction peut avoir une ou plusieurs catégories</li>
                    <li>Vous pouvez répartir le montant d'une transaction entre plusieurs catégories</li>
                    <li>Les graphiques du tableau de bord utilisent les catégories pour visualiser vos dépenses</li>
                </ul>
                
                <h6>Exemples de catégories :</h6>
                <div class="d-flex flex-wrap gap-2">
                    <span class="badge bg-success">Revenus</span>
                    <span class="badge bg-danger">Logement</span>
                    <span class="badge" style="background-color: #3498db;">Alimentation</span>
                    <span class="badge" style="background-color: #9b59b6;">Transport</span>
                    <span class="badge" style="background-color: #e67e22;">Loisirs</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Synchroniser la valeur hexadécimale avec le sélecteur de couleur
        document.getElementById('Color').addEventListener('input', function() {
            document.getElementById('colorHex').value = this.value;
        });
    </script>
}
