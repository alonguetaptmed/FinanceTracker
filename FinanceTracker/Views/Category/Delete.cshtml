@model CategoryViewModel
@{
    ViewData["Title"] = "Supprimer la catégorie";
}

<h1 class="text-danger">Supprimer la catégorie</h1>

<div class="alert alert-danger">
    <h4><i class="bi bi-exclamation-triangle"></i> Attention</h4>
    <p>
        Êtes-vous sûr de vouloir supprimer cette catégorie ? Cette action est irréversible et supprimera les associations avec les transactions existantes.
    </p>
</div>

<div class="card mb-4">
    <div class="card-header" style="background-color: @Model.Color; color: #fff;">
        <i class="bi bi-info-circle"></i> Détails de la catégorie à supprimer
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
            
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
            <dd class="col-sm-9">
                @if (string.IsNullOrEmpty(Model.Description))
                {
                    <span class="text-muted">Pas de description</span>
                }
                else
                {
                    @Html.DisplayFor(model => model.Description)
                }
            </dd>
            
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Color)</dt>
            <dd class="col-sm-9">
                <div class="d-flex align-items-center">
                    <div style="width: 20px; height: 20px; background-color: @Model.Color; margin-right: 10px; border-radius: 4px;"></div>
                    @Html.DisplayFor(model => model.Color)
                </div>
            </dd>
            
            <dt class="col-sm-3">Nombre de transactions</dt>
            <dd class="col-sm-9">@Model.TransactionCount transactions</dd>
            
            <dt class="col-sm-3">Montant total</dt>
            <dd class="col-sm-9">@Model.TotalAmount.ToString("C2")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Annuler et retourner à la liste
        </a>
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirmer la suppression
        </button>
    </div>
</form>
